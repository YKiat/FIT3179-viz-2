  "transform": [
    {
      "filter": "if(Country!=null, datum.country == Country, datum.country == 'Albania')"
    }
  ],
  "layer": [
    {"mark": {"type": "arc", "innerRadius": 5, "stroke": "#fff"}},
    {
      "mark": {"type": "text", "radiusOffset": 20},
      "encoding": {"text": {"field": "suicides_no_x", "type": "quantitative"}}
    }
  ],
  "encoding": {
    "theta": {"field": "suicides_no_x", "type": "quantitative", "stack": true},
    "radius": {
      "field": "suicides_no_x",
      "scale": {"type": "sqrt", "zero": true, "rangeMin": 20}
    },
    "tooltip": [
      {"field": "generation", "type": "nominal", "title": "Generation"},
      {"field": "suicide_percentage", "type": "ordinal", "title": "Suicide(%)"}
    ],
    "color": {"field": "generation", "type": "nominal"}
  },
  "config": {}
